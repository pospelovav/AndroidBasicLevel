<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textSettingsActivityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_select"
        app:layout_constraintEnd_toEndOf="@+id/textChangeCityView"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/textChangeCityView"
        app:layout_constraintTop_toBottomOf="@+id/buttonDarkOrLight" />

    <CheckBox
        android:id="@+id/checkBoxAtmosphericPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/checkbox_atmospheric_pressure"
        app:layout_constraintStart_toStartOf="@+id/checkBoxWindSpeed"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxWindSpeed" />

    <AutoCompleteTextView
        android:id="@+id/textChangeCityView"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:completionThreshold="1"
        app:layout_constraintEnd_toEndOf="@+id/textCitySettingsView"
        app:layout_constraintStart_toStartOf="@+id/textCitySettingsView"
        app:layout_constraintTop_toBottomOf="@+id/textCitySettingsView"
        tools:ignore="LabelFor" />

    <CheckBox
        android:id="@+id/checkBoxWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="@string/checkbox_wind_speed"
        app:layout_constraintBottom_toBottomOf="@+id/textChangeCityView"
        app:layout_constraintStart_toEndOf="@+id/textChangeCityView"
        app:layout_constraintTop_toTopOf="@+id/textCitySettingsView" />

    <TextView
        android:id="@+id/textCitySettingsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:text="@string/textCitySettingsView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDarkOrLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonDarkText"
        app:layout_constraintEnd_toEndOf="@+id/textChangeCityView"
        app:layout_constraintStart_toStartOf="@+id/textChangeCityView"
        app:layout_constraintTop_toBottomOf="@+id/textChangeCityView" />

</androidx.constraintlayout.widget.ConstraintLayout>